<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PMDM_Tarea2" parent="Theme.Material3.Light">

        <item name="background">@color/backgroundColor</item>
        <item name="fontFamily">@font/dm_sans</item>

        <!-- Splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/mario_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">5000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/colorPrimary</item>
        <item name="android:windowSplashScreenBackground">@color/colorPrimary</item>

    </style>

    <style name="TextName">
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRole">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextSkill">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

</resources>